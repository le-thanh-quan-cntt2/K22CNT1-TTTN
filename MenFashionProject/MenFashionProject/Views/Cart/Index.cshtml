@model List<MenFashionProject.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ Hàng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
}
@using MenFashionProject.Models
@using MenFashionProject.Helpers

@{
    var voucher = Context.Session.GetObjectFromJson<Voucher>("MY_VOUCHER");

    decimal subTotal = Model.Sum(x => x.Total);
    decimal discount = 0;

    if (voucher != null)
    {
        if (voucher.DiscountType == 1)
        {
            discount = voucher.DiscountValue;
        }
        else if (voucher.DiscountType == 2)
        {
            discount = subTotal * voucher.DiscountValue / 100;
        }
    }

    decimal finalTotal = subTotal - discount;
    if (finalTotal < 0) finalTotal = 0;
}

<div class="container cart-page py-5">

    <h2 class="cart-title">Giỏ hàng của bạn</h2>

    @if (Model.Count > 0)
    {
        <div class="row">
            <!-- ===== DANH SÁCH SẢN PHẨM ===== -->
            <div class="col-lg-8">
                <div class="cart-box">
                    <table class="table cart-table align-middle">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="cart-product">
                                            <img src="~/images/@item.Image" />
                                            <div>
                                                <div class="name">@item.ProductName</div>
                                                <small>Size: @item.Size | Màu: @item.Color</small>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="price">
                                        @item.Price.ToString("#,##0") đ
                                    </td>
                                    <td>
                                        <div class="qty-wrapper">
                                            <a class="qty-btn"
                                               href="/Cart/UpdateQuantity?id=@item.ProductId&size=@item.Size&color=@item.Color&change=-1">−</a>

                                            <input type="text" value="@item.Quantity" readonly />

                                            <a class="qty-btn"
                                               href="/Cart/UpdateQuantity?id=@item.ProductId&size=@item.Size&color=@item.Color&change=1">+</a>
                                        </div>
                                    </td>


                                    <td class="total">
                                        @item.Total.ToString("#,##0") đ
                                    </td>

                                    <td class="text-center">
                                        <a href="/Cart/Remove?id=@item.ProductId&size=@item.Size&color=@item.Color"
                                           onclick="return confirm('Xóa sản phẩm này?')"
                                           class="remove-btn">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- ===== TỔNG TIỀN ===== -->
            <div class="col-lg-4">
                <div class="cart-summary">
                    <h5>Cộng giỏ hàng</h5>
                    <div class="summary-row">
                        <span>Tạm tính</span>
                        <span>@Model.Sum(x => x.Total).ToString("#,##0") đ</span>
                    </div>

                    <div class="summary-row total">
                        <span>Tổng tiền</span>
                        <span>@Model.Sum(x => x.Total).ToString("#,##0") đ</span>
                    </div>

                    <a href="/Checkout/Index" class="btn btn-dark w-100 mb-2">
                        Tiến hành thanh toán
                    </a>

                    <a href="/" class="btn btn-outline-secondary w-100">
                        Tiếp tục mua sắm
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="cart-empty">
            <i class="fa-solid fa-cart-shopping"></i>
            <p>Giỏ hàng của bạn đang trống</p>
            <a href="/" class="btn btn-dark">Mua sắm ngay</a>
        </div>
    }

</div>
