@model IEnumerable<MenFashionProject.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
    var categories = ViewBag.Categories as List<MenFashionProject.Models.Category> ?? new List<MenFashionProject.Models.Category>();
}

@* --- BANNER SLIDER --- *@
<div id="carouselExampleControls" class="carousel slide mb-5 shadow-sm" data-bs-ride="carousel" data-bs-interval="4000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/banner1.jpg" class="d-block w-100 banner-img" alt="Banner Mùa Đông">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3 mb-4">
                <h2 class="fw-bold text-uppercase">Phong Cách Lịch Lãm</h2>
                <p>Bộ sưu tập thời trang nam mới nhất 2025.</p>
                <a href="#new-arrival" class="btn btn-light fw-bold px-4 rounded-pill">Mua Ngay</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner2.jpg" class="d-block w-100 banner-img" alt="Banner Công Sở">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3 mb-4">
                <h2 class="fw-bold text-uppercase">Đẳng Cấp Doanh Nhân</h2>
                <p>Vest và sơ mi cao cấp dành cho phái mạnh.</p>
                <a href="#" class="btn btn-light fw-bold px-4 rounded-pill">Xem Chi Tiết</a>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Trước</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sau</span>
    </button>
</div>

<div class="container mb-5" id="new-arrival">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold">
                    <i class="fa-solid fa-filter me-2"></i> BỘ LỌC TÌM KIẾM
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <div class="mb-3">
                            <label class="form-label small fw-bold">Tên sản phẩm</label>
                            <input type="text" name="searchString" class="form-control form-control-sm"
                                   value="@ViewBag.SearchString" placeholder="Nhập tên...">
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Danh mục</label>
                            <select name="categoryId" class="form-select form-select-sm">
                                <option value="">-- Tất cả --</option>
                                @foreach (var cat in categories)
                                {
                                    if (ViewBag.CategoryId != null && (int)ViewBag.CategoryId == cat.CategoryId)
                                    {
                                        <option value="@cat.CategoryId" selected>@cat.CategoryName</option>
                                    }
                                    else
                                    {
                                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-bold">Mức giá</label>
                            <div class="d-flex gap-2">
                                <input type="number" name="minPrice" class="form-control form-control-sm"
                                       placeholder="Min" value="@ViewBag.MinPrice">
                                <span class="align-self-center">-</span>
                                <input type="number" name="maxPrice" class="form-control form-control-sm"
                                       placeholder="Max" value="@ViewBag.MaxPrice">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-dark w-100 btn-sm">
                            <i class="fa-solid fa-magnifying-glass me-2"></i>Áp dụng
                        </button>
                        <a href="/" class="btn btn-outline-secondary w-100 btn-sm mt-2">Bỏ lọc</a>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold">Sản phẩm mới nhất</h5>
                <span class="text-secondary small">Tìm thấy @Model.Count() sản phẩm</span>
            </div>

            <div class="row">
                @if (Model.Count() == 0)
                {
                    <div class="col-12 text-center py-5">
                        <i class="fa-solid fa-box-open fs-1 text-secondary mb-3"></i>
                        <p>Không tìm thấy sản phẩm nào phù hợp.</p>
                    </div>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="col-6 col-md-4 mb-4">
                            <div class="card h-100 border-0 shadow-sm product-card">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="position-relative overflow-hidden">
                                    <img src="~/images/@(item.Image ?? "no-image.png")" class="card-img-top"
                                         style="height: 250px; object-fit: cover; transition: transform 0.3s;">

                                    @if (item.PriceSale > 0)
                                    {
                                        <span class="position-absolute top-0 start-0 bg-danger text-white small px-2 py-1 m-2 rounded">
                                            SALE
                                        </span>
                                    }
                                </a>

                                <div class="card-body text-center">
                                    <h6 class="card-title text-truncate">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId"
                                           class="text-decoration-none text-dark fw-bold">
                                            @item.ProductName
                                        </a>
                                    </h6>

                                    <div class="mt-2">
                                        @if (item.PriceSale.HasValue && item.PriceSale > 0)
                                        {
                                            <span class="text-danger fw-bold me-2">
                                                @item.PriceSale.Value.ToString("#,##0") đ
                                            </span>

                                            <small class="text-muted text-decoration-line-through">
                                                @item.Price.ToString("#,##0") đ
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="fw-bold">
                                                @item.Price.ToString("#,##0") đ
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="card-footer bg-white border-top-0 d-grid">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId"
                                       class="btn btn-outline-dark btn-sm">
                                        Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            int current = ViewBag.CurrentPage;
            int total = ViewBag.TotalPages;

            <nav class="mt-4">
                <ul class="pagination justify-content-center pagination-circle">
                    @* Code phân trang giữ nguyên như cũ *@
                    @if (current > 1)
                    {
                        <li class="page-item"><a class="page-link" href="?page=1">&laquo;</a></li>
                    }
                    @if (current > 1)
                    {
                        <li class="page-item"><a class="page-link" href="?page=@(current - 1)">&#8249;</a></li>
                    }

                    <li class="page-item @(current == 1 ? "active" : "")"><a class="page-link" href="?page=1">1</a></li>

                    @if (current > 3)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }

                    @for (int i = Math.Max(2, current - 1); i <= Math.Min(total - 1, current + 1); i++)
                    {
                        if (i == 1 || i == total) continue;
                        <li class="page-item @(i == current ? "active" : "")"><a class="page-link" href="?page=@i">@i</a></li>
                    }

                    @if (current < total - 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }

                    @if (total > 1)
                    {
                        <li class="page-item @(current == total ? "active" : "")"><a class="page-link" href="?page=@total">@total</a></li>
                    }

                    @if (current < total)
                    {
                        <li class="page-item"><a class="page-link" href="?page=@(current + 1)">&#8250;</a></li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>