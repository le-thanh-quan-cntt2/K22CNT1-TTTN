@model MenFashionProject.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>
            Chi tiết đơn hàng <span class="text-danger">#@Model.Code</span>
            <span class="badge bg-dark ms-2">DEBUG: Status = @Model.Status</span>
        </h4>
        <a href="/Account/History" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-bold">Thông tin nhận hàng</div>
                <div class="card-body">
                    <p class="fw-bold mb-1">@Model.CustomerName</p>
                    <p class="text-secondary mb-1">@Model.Phone</p>
                    <p class="text-secondary">@Model.Address</p>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-bold">Trạng thái xử lý</div>
                <div class="card-body d-flex align-items-center justify-content-around">
                    <div class="text-center @(Model.Status >= 1 ? "text-success" : "text-muted")">
                        <i class="fa-solid fa-clipboard-check fs-4"></i><br><small>Đặt hàng</small>
                    </div>
                    <div class="border-top w-25"></div>
                    <div class="text-center @(Model.Status >= 3 ? "text-success" : "text-muted")">
                        <i class="fa-solid fa-truck fs-4"></i><br><small>Vận chuyển</small>
                    </div>
                    <div class="border-top w-25"></div>
                    <div class="text-center @(Model.Status == 4 ? "text-success" : "text-muted")">
                        <i class="fa-solid fa-box-open fs-4"></i><br><small>Hoàn thành</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-header bg-light fw-bold">Danh sách sản phẩm</div>
        <div class="card-body p-0">
            <table class="table align-middle mb-0">
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td style="width: 80px;">
                                <img src="~/images/@item.Product.Image" width="60" class="rounded border">
                            </td>
                            <td>
                                <p class="mb-0 fw-bold">
                                    <a href="/Product/Details/@item.ProductId" class="text-decoration-none text-dark">
                                        @item.Product.ProductName
                                    </a>
                                </p>
                                <small class="text-secondary">Size: @item.Size | Màu: @item.Color</small>

                                @if (Model.Status == 4) // Chỉ hiện khi Status = 4
                                {
                                    <div class="mt-2">
                                        <a href="/Product/Details/@item.ProductId#box-review"
                                           class="btn btn-sm btn-warning text-dark fw-bold">
                                            <i class="fa-solid fa-star"></i> Viết đánh giá
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-danger small mt-1">
                                        (Không hiện nút vì Status = @Model.Status, cần 4)
                                    </div>
                                }
                            </td>
                            <td class="text-center">x @item.Quantity</td>
                            <td class="text-end fw-bold">@((item.Price * item.Quantity).ToString("#,##0")) đ</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-light">
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Tổng tiền:</td>
                        <td class="text-end fw-bold text-danger fs-5">@((Model.TotalAmount ?? 0).ToString("#,##0")) đ</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    @if (Model.Status == 1)
    {
        <div class="mt-4 text-end">
            <form asp-action="CancelOrder" asp-controller="Account" method="post" style="display:inline-block;"
                  onsubmit="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?');">
                <input type="hidden" name="id" value="@Model.OrderId" />
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fa-solid fa-xmark"></i> Hủy đơn hàng
                </button>
            </form>
        </div>
    }
</div>