@{
    ViewData["Title"] = "Thành Viên VIP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">CHƯƠNG TRÌNH KHÁCH HÀNG THÂN THIẾT</h2>
        <p class="text-muted">Tích lũy chi tiêu - Nhận ngàn ưu đãi</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-primary border-2">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="fw-bold m-0">SILVER (BẠC)</h4>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 fw-bold my-3">5%</h1>
                    <p class="text-muted">Chi tiêu tích lũy từ:</p>
                    <h5 class="fw-bold text-primary">2.000.000 đ</h5>
                    <hr>
                    <ul class="list-unstyled text-start mx-auto" style="max-width: 250px;">
                        <li><i class="fa-solid fa-check text-success me-2"></i>Giảm 5% mọi đơn hàng</li>
                        <li><i class="fa-solid fa-check text-success me-2"></i>Quà tặng sinh nhật</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow border-warning border-2 transform-scale">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <h4 class="fw-bold m-0"><i class="fa-solid fa-crown me-2"></i>GOLD (VÀNG)</h4>
                </div>
                <div class="card-body text-center bg-light">
                    <h1 class="display-4 fw-bold my-3 text-warning">10%</h1>
                    <p class="text-muted">Chi tiêu tích lũy từ:</p>
                    <h5 class="fw-bold text-dark">5.000.000 đ</h5>
                    <hr>
                    <ul class="list-unstyled text-start mx-auto" style="max-width: 250px;">
                        <li><i class="fa-solid fa-check text-success me-2"></i>Giảm 10% mọi đơn hàng</li>
                        <li><i class="fa-solid fa-check text-success me-2"></i>Freeship toàn quốc</li>
                        <li><i class="fa-solid fa-check text-success me-2"></i>Ưu tiên giao hàng</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-dark border-2">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h4 class="fw-bold m-0">DIAMOND</h4>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 fw-bold my-3">15%</h1>
                    <p class="text-muted">Chi tiêu tích lũy từ:</p>
                    <h5 class="fw-bold text-dark">10.000.000 đ</h5>
                    <hr>
                    <ul class="list-unstyled text-start mx-auto" style="max-width: 250px;">
                        <li><i class="fa-solid fa-check text-success me-2"></i>Giảm 15% trọn đời</li>
                        <li><i class="fa-solid fa-check text-success me-2"></i>Quà tết đặc biệt</li>
                        <li><i class="fa-solid fa-check text-success me-2"></i>Hotline hỗ trợ riêng</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>