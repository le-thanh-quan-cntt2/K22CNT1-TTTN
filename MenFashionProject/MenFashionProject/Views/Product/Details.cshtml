@model MenFashionProject.Models.Product
@section Styles {
    <link rel="stylesheet" href="~/css/product.css" />
}
@{
    ViewData["Title"] = Model.ProductName ?? "";

    // Lấy dữ liệu từ ViewBag
    var sizes = ViewBag.Sizes as List<string> ?? new List<string>();
    var colors = ViewBag.Colors as List<string> ?? new List<string>();
    var gallery = ViewBag.Gallery as List<MenFashionProject.Models.ProductImage> ?? new();
    var related = ViewBag.RelatedProducts as List<MenFashionProject.Models.Product> ?? new();

    // Dữ liệu đánh giá
    var reviews = ViewBag.Reviews as List<MenFashionProject.Models.Review> ?? new List<MenFashionProject.Models.Review>();
    bool canReview = ViewBag.CanReview ?? false;
}


<div class="container py-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Trang chủ</a></li>
            <li class="breadcrumb-item">@Model.Category?.CategoryName</li>
            <li class="breadcrumb-item active">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row mt-4">
        <div class="col-md-6">
            <img id="mainImage"
                 src="~/images/@(Model.Image ?? "no-image.png")"
                 class="img-fluid rounded mb-3"
                 style="width:100%;object-fit:cover" />

            <div class="d-flex gap-2 overflow-auto">
                <img src="~/images/@(Model.Image ?? "no-image.png")"
                     class="img-thumbnail"
                     style="width:80px;cursor:pointer"
                     onclick="changeImage(this)" />

                @foreach (var img in gallery)
                {
                    <img src="~/images/@img.Url"
                         class="img-thumbnail"
                         style="width:80px;cursor:pointer"
                         onclick="changeImage(this)" />
                }
            </div>
        </div>

        <div class="col-md-6">
            <h2 class="fw-bold">@Model.ProductName</h2>

            <div class="mb-3">
                <span class="h4 text-danger fw-bold">
                    @{
                        // [ĐÃ SỬA] Xóa GetValueOrDefault() ở đây
                        var price = Model.PriceSale.HasValue && Model.PriceSale.Value > 0
                        ? Model.PriceSale.Value
                        : Model.Price;
                    }
                    @price.ToString("#,##0") đ
                </span>
                <div class="small text-warning">
                    @if (ViewBag.RatingCount > 0)
                    {
                        <span>(@ViewBag.RatingAverage / 5 <i class="fa-solid fa-star"></i>) - @ViewBag.RatingCount đánh giá</span>
                    }
                </div>
            </div>

            <p class="text-secondary">@Model.Description</p>
            <hr />

            <form asp-controller="Cart" asp-action="AddToCart" method="post" id="addToCartForm">
                <input type="hidden" name="id" value="@Model.ProductId" />
                <input type="hidden" name="size" id="selectedSize" />
                <input type="hidden" name="color" id="selectedColor" />
                <input type="hidden" name="type" id="actionType" value="Normal" />

                <div class="mb-3">
                    <label class="fw-bold">Màu sắc</label><br />
                    @foreach (var c in colors)
                    {
                        <button type="button"
                                class="btn btn-outline-dark btn-sm me-2 btn-color"
                                onclick="selectColor(this,'@c')">
                            @c
                        </button>
                    }
                    <div id="colorError" class="text-danger small d-none">Vui lòng chọn màu</div>
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Kích thước</label><br />
                    @foreach (var s in sizes)
                    {
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm me-2 btn-size"
                                onclick="selectSize(this,'@s')">
                            @s
                        </button>
                    }
                    <div id="sizeError" class="text-danger small d-none">Vui lòng chọn size</div>
                </div>

                <div class="mb-3 d-flex align-items-center">
                    <label class="fw-bold me-3">Số lượng</label>
                    <div class="input-group" style="width:120px">
                        <button class="btn btn-outline-secondary" type="button" onclick="stepDown()">-</button>
                        <input id="quantity" name="quantity" type="number" value="1" min="1"
                               class="form-control text-center" />
                        <button class="btn btn-outline-secondary" type="button" onclick="stepUp()">+</button>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button type="button" class="btn btn-outline-dark w-50"
                            onclick="submitForm('Normal')">
                        <i class="fa-solid fa-cart-plus me-2"></i> Thêm vào giỏ
                    </button>
                    <button type="button" class="btn btn-danger w-50"
                            onclick="buyNow(@Model.ProductId)">
                        Mua ngay
                    </button>
                </div>
            </form>

            <div class="mt-4 p-3 bg-light rounded small">
                <p><i class="fa-solid fa-check text-success me-2"></i>Bảo hành trọn đời</p>
                <p><i class="fa-solid fa-rotate text-success me-2"></i>Đổi trả 30 ngày</p>
                <p><i class="fa-solid fa-truck text-success me-2"></i>Giao hàng toàn quốc</p>
            </div>
        </div>
    </div>

    <div class="mt-5 border-top pt-4" id="box-review">
        <h4 class="fw-bold mb-4">Đánh giá & Nhận xét (@ViewBag.RatingCount)</h4>

        @if (TempData["ErrorReview"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorReview"]</div>
        }
        @if (TempData["SuccessReview"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessReview"]</div>
        }

        <div class="card bg-light mb-4 border-0">
            <div class="card-body">

                @if (canReview == true)
                {
                    <h6 class="fw-bold">Gửi nhận xét của bạn</h6>
                    <form asp-action="AddReview" asp-controller="Product" method="post">
                        <input type="hidden" name="ProductId" value="@Model.ProductId" />

                        <div class="mb-2">
                            <label class="mb-1">Đánh giá sao:</label>
                            <div class="rating justify-content-end" style="width: fit-content;">
                                <input type="radio" name="Rating" id="star5" value="5" checked /><label for="star5" title="Tuyệt vời">★</label>
                                <input type="radio" name="Rating" id="star4" value="4" /><label for="star4" title="Tốt">★</label>
                                <input type="radio" name="Rating" id="star3" value="3" /><label for="star3" title="Bình thường">★</label>
                                <input type="radio" name="Rating" id="star2" value="2" /><label for="star2" title="Tệ">★</label>
                                <input type="radio" name="Rating" id="star1" value="1" /><label for="star1" title="Rất tệ">★</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <textarea name="Comment" class="form-control" rows="3" placeholder="Chia sẻ cảm nhận về sản phẩm..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-dark">Gửi đánh giá</button>
                    </form>
                }
                else
                {
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="alert alert-warning mb-0 text-center">
                            Bạn đã hết lượt đánh giá cho sản phẩm này.<br />
                            <a href="/" class="fw-bold text-dark">Mua thêm</a> để có thể viết đánh giá mới!
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <p class="mb-2">Bạn cần đăng nhập để viết đánh giá.</p>
                            <a href="/Account/Login?returnUrl=/Product/Details/@Model.ProductId" class="btn btn-outline-dark">Đăng nhập ngay</a>
                        </div>
                    }
                }

            </div>
        </div>

        <div class="review-list">
            @if (reviews != null && reviews.Count > 0)
            {
                foreach (var review in reviews)
                {
                    <div class="d-flex mb-3 border-bottom pb-3">
                        <div class="me-3">
                            <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <span class="fw-bold">@review.User?.FullName?.Substring(0, 1)</span>
                            </div>
                        </div>
                        <div>
                            <h6 class="mb-1 fw-bold">@review.User?.FullName</h6>
                            <div class="text-warning mb-1 small">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <i class="fa-solid fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-regular fa-star"></i>
                                    }
                                }
                            </div>
                            <p class="text-secondary mb-1">@review.Comment</p>
                            <small class="text-muted">@review.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">Chưa có đánh giá nào. Hãy là người đầu tiên mua và đánh giá sản phẩm này!</p>
            }
        </div>
    </div>

    <div class="mt-5">
        <h4 class="fw-bold mb-4">Sản phẩm liên quan</h4>
        <div class="row">
            @foreach (var item in related)
            {
                <div class="col-6 col-md-3 mb-3">
                    <div class="card h-100 border-0 shadow-sm product-card">
                        <a href="/Product/Details/@item.ProductId" class="text-decoration-none">
                            <img src="~/images/@(item.Image ?? "no-image.png")"
                                 class="card-img-top"
                                 style="height:250px;object-fit:cover" />
                        </a>
                        <div class="card-body text-center">
                            <h6 class="text-truncate">
                                <a href="/Product/Details/@item.ProductId" class="text-dark text-decoration-none">
                                    @item.ProductName
                                </a>
                            </h6>

                            <p class="text-danger fw-bold">
                                @(item.Price.ToString("#,##0")) đ
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function selectSize(btn, size) {
        document.getElementById('selectedSize').value = size;
        document.getElementById('sizeError').classList.add('d-none');
        document.querySelectorAll('.btn-size').forEach(b => b.classList.remove('btn-dark'));
        btn.classList.add('btn-dark');
    }

    function selectColor(btn, color) {
        document.getElementById('selectedColor').value = color;
        document.getElementById('colorError').classList.add('d-none');
        document.querySelectorAll('.btn-color').forEach(b => b.classList.remove('btn-dark'));
        btn.classList.add('btn-dark');
    }

    function submitForm(type) {
        if (!document.getElementById('selectedSize').value) {
            document.getElementById('sizeError').classList.remove('d-none');
            return;
        }
        if (!document.getElementById('selectedColor').value) {
            document.getElementById('colorError').classList.remove('d-none');
            return;
        }
        document.getElementById('actionType').value = type;
        document.getElementById('addToCartForm').submit();
    }

    function buyNow(id) {
        var s = document.getElementById('selectedSize').value;
        var c = document.getElementById('selectedColor').value;
        var q = document.getElementById('quantity').value;

        if (!s) { document.getElementById('sizeError').classList.remove('d-none'); return; }
        if (!c) { document.getElementById('colorError').classList.remove('d-none'); return; }

        location.href = `/Checkout?productId=${id}&quantity=${q}&size=${encodeURIComponent(s)}&color=${encodeURIComponent(c)}`;
    }

    function changeImage(el) { document.getElementById('mainImage').src = el.src; }
    function stepUp() { document.getElementById('quantity').stepUp(); }
    function stepDown() { document.getElementById('quantity').stepDown(); }
</script>