@model MenFashionProject.Models.Product

@{
    ViewData["Title"] = Model.ProductName ?? "";
    var sizes = ViewBag.Sizes as List<string> ?? new List<string>();
    var colors = ViewBag.Colors as List<string> ?? new List<string>();
    var gallery = ViewBag.Gallery as List<MenFashionProject.Models.ProductImage> ?? new();
    var related = ViewBag.RelatedProducts as List<MenFashionProject.Models.Product> ?? new();
}

<div class="container py-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-dark">Trang chủ</a></li>
            <li class="breadcrumb-item">@Model.Category?.CategoryName</li>
            <li class="breadcrumb-item active">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row mt-4">
        <!-- ẢNH -->
        <div class="col-md-6">
            <img id="mainImage"
                 src="~/images/@(Model.Image ?? "no-image.png")"
                 class="img-fluid rounded mb-3"
                 style="width:100%;object-fit:cover" />

            <div class="d-flex gap-2 overflow-auto">
                <img src="~/images/@(Model.Image ?? "no-image.png")"
                     class="img-thumbnail"
                     style="width:80px;cursor:pointer"
                     onclick="changeImage(this)" />

                @foreach (var img in gallery)
                {
                    <img src="~/images/@img.Url"
                         class="img-thumbnail"
                         style="width:80px;cursor:pointer"
                         onclick="changeImage(this)" />
                }
            </div>
        </div>

        <!-- THÔNG TIN -->
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.ProductName</h2>

            <div class="mb-3">
                <span class="h4 text-danger fw-bold">
                    @{
                        var price = Model.PriceSale.HasValue && Model.PriceSale.Value > 0
                        ? Model.PriceSale.Value
                        : Model.Price.GetValueOrDefault();
                    }
                    @price.ToString("#,##0") đ
                </span>
            </div>

            <p class="text-secondary">@Model.Description</p>
            <hr />

            <form asp-controller="Cart" asp-action="AddToCart" method="post" id="addToCartForm">
                <input type="hidden" name="id" value="@Model.ProductId" />
                <input type="hidden" name="size" id="selectedSize" />
                <input type="hidden" name="color" id="selectedColor" />
                <input type="hidden" name="type" id="actionType" value="Normal" />

                <!-- MÀU -->
                <div class="mb-3">
                    <label class="fw-bold">Màu sắc</label><br />
                    @foreach (var c in colors)
                    {
                        <button type="button"
                                class="btn btn-outline-dark btn-sm me-2 btn-color"
                                onclick="selectColor(this,'@c')">
                            @c
                        </button>
                    }
                    <div id="colorError" class="text-danger small d-none">Vui lòng chọn màu</div>
                </div>

                <!-- SIZE -->
                <div class="mb-3">
                    <label class="fw-bold">Kích thước</label><br />
                    @foreach (var s in sizes)
                    {
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm me-2 btn-size"
                                onclick="selectSize(this,'@s')">
                            @s
                        </button>
                    }
                    <div id="sizeError" class="text-danger small d-none">Vui lòng chọn size</div>
                </div>

                <!-- SỐ LƯỢNG -->
                <div class="mb-3 d-flex align-items-center">
                    <label class="fw-bold me-3">Số lượng</label>
                    <div class="input-group" style="width:120px">
                        <button class="btn btn-outline-secondary" type="button" onclick="stepDown()">-</button>
                        <input id="quantity" name="quantity" type="number" value="1" min="1"
                               class="form-control text-center" />
                        <button class="btn btn-outline-secondary" type="button" onclick="stepUp()">+</button>
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button type="button" class="btn btn-outline-dark w-50"
                            onclick="submitForm('Normal')">
                        <i class="fa-solid fa-cart-plus me-2"></i> Thêm vào giỏ
                    </button>
                    <button type="button" class="btn btn-danger w-50"
                            onclick="buyNow(@Model.ProductId)">
                        Mua ngay
                    </button>
                </div>
            </form>

            <div class="mt-4 p-3 bg-light rounded small">
                <p><i class="fa-solid fa-check text-success me-2"></i>Bảo hành trọn đời</p>
                <p><i class="fa-solid fa-rotate text-success me-2"></i>Đổi trả 30 ngày</p>
                <p><i class="fa-solid fa-truck text-success me-2"></i>Giao hàng toàn quốc</p>
            </div>
        </div>
    </div>

    <!-- LIÊN QUAN -->
    <div class="mt-5">
        <h4 class="fw-bold mb-4">Sản phẩm liên quan</h4>
        <div class="row">
            @foreach (var item in related)
            {
                <div class="col-6 col-md-3 mb-3">
                    <div class="card h-100 border-0">
                        <a href="/Product/Details/@item.ProductId">
                            <img src="~/images/@(item.Image ?? "no-image.png")"
                                 class="card-img-top"
                                 style="height:250px;object-fit:cover" />
                        </a>
                        <div class="card-body text-center">
                            <h6>@item.ProductName</h6>
                            <p class="text-danger fw-bold">
                                @(item.Price.GetValueOrDefault().ToString("#,##0")) đ
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function selectSize(btn, size) {
        document.getElementById('selectedSize').value = size;
        document.getElementById('sizeError').classList.add('d-none');
        document.querySelectorAll('.btn-size').forEach(b => b.classList.remove('btn-dark'));
        btn.classList.add('btn-dark');
    }

    function selectColor(btn, color) {
        document.getElementById('selectedColor').value = color;
        document.getElementById('colorError').classList.add('d-none');
        document.querySelectorAll('.btn-color').forEach(b => b.classList.remove('btn-dark'));
        btn.classList.add('btn-dark');
    }

    function submitForm(type) {
        if (!selectedSize.value) { sizeError.classList.remove('d-none'); return; }
        if (!selectedColor.value) { colorError.classList.remove('d-none'); return; }
        actionType.value = type;
        addToCartForm.submit();
    }

    function buyNow(id) {
        if (!selectedSize.value) { sizeError.classList.remove('d-none'); return; }
        if (!selectedColor.value) { colorError.classList.remove('d-none'); return; }
        location.href = `/Checkout?productId=${id}&quantity=${quantity.value}&size=${encodeURIComponent(selectedSize.value)}&color=${encodeURIComponent(selectedColor.value)}`;
    }

    function changeImage(el) { mainImage.src = el.src; }
    function stepUp() { quantity.stepUp(); }
    function stepDown() { quantity.stepDown(); }
</script>
