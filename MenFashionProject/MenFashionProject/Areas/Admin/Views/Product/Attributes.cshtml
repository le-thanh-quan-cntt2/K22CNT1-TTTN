@model MenFashionProject.Models.Product
@{
    ViewData["Title"] = "Quản lý thuộc tính";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Thuộc tính: <span class="text-primary">@Model.ProductName</span></h4>
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">Thêm Size/Màu</div>
                <div class="card-body">
                    <form asp-action="AddAttribute" method="post">
                        <input type="hidden" name="ProductId" value="@Model.ProductId" />

                        <div class="mb-3">
                            <label class="form-label">Kích thước (Size)</label>
                            <input type="text" name="Size" class="form-control" placeholder="VD: S, M, 30, 31..." required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Màu sắc</label>
                            <input type="text" name="Color" class="form-control" placeholder="VD: Trắng, Đen..." required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số lượng tồn</label>
                            <input type="number" name="Quantity" class="form-control" value="10" required>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Thêm Thuộc Tính</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">Danh sách Size/Màu hiện có</div>
                <table class="table table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Size</th>
                            <th>Màu sắc</th>
                            <th>Tồn kho</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductAttributes)
                        {
                            <tr>
                                <td class="fw-bold">@item.Size</td>
                                <td>@item.Color</td>
                                <td class="text-center">@item.Quantity</td>
                                <td>
                                    <form asp-action="DeleteAttribute" method="post" onsubmit="return confirm('Xóa dòng này?');">
                                        <input type="hidden" name="id" value="@item.AttributeId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>