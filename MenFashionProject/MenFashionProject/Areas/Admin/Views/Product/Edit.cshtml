@model MenFashionProject.Models.Product
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-sm border-0" style="max-width: 900px; margin: auto;">
    <div class="card-header bg-white py-3">
        <h5 class="fw-bold mb-0">Cập nhật Sản Phẩm: <span class="text-primary">@Model.ProductName</span></h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="Image" /> <input type="hidden" asp-for="CreatedDate" />

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label">Tên sản phẩm</label>
                        <input asp-for="ProductName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả ngắn</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giá bán (VNĐ)</label>
                            <input asp-for="Price" type="number" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giá khuyến mãi</label>
                            <input asp-for="PriceSale" type="number" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3 border p-3 rounded bg-light">
                        <label class="fw-bold mb-2">Ảnh phụ hiện có:</label>
                        <div class="d-flex flex-wrap gap-2">
                            @if (Model.ProductImages != null && Model.ProductImages.Count > 0)
                            {
                                @foreach (var img in Model.ProductImages)
                                {
                                    <div class="position-relative" id="img-container-@img.ImageId">
                                        <img src="~/images/@img.Url" class="rounded border" style="width: 80px; height: 80px; object-fit: cover;" />

                                        <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 p-0"
                                                style="width: 20px; height: 20px; font-size: 10px;"
                                                onclick="deleteImage(@img.ImageId)">
                                            <i class="fa-solid fa-xmark"></i>
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted small">Chưa có ảnh phụ nào.</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Danh mục</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ảnh đại diện (Chọn để thay đổi)</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(this, 'imgPreview')" />
                        <div class="mt-2 text-center">
                            <img id="imgPreview" src="~/images/@Model.Image" style="max-width: 100%; border-radius: 5px;" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Thêm ảnh phụ mới</label>
                        <input type="file" name="extraImages" class="form-control" accept="image/*" multiple />
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="IsActive" value="true"
                               @(Model.IsActive == true ? "checked" : "") />

                        <input type="hidden" name="IsActive" value="false" />

                        <label class="form-check-label">Hiển thị ngay</label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="IsHome" value="true"
                               @(Model.IsHome == true ? "checked" : "") />

                        <input type="hidden" name="IsHome" value="false" />

                        <label class="form-check-label">Hiện ở trang chủ</label>
                    </div>
                </div>
            </div>

            <div class="text-end mt-3">
                <a asp-action="Index" class="btn btn-secondary me-2">Quay lại</a>
                <button type="submit" class="btn btn-warning px-4">Cập Nhật</button>
            </div>
        </form>
    </div>
</div>

<script>
    function previewImage(input, imgId) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById(imgId).src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    // Hàm xóa ảnh phụ bằng AJAX
    function deleteImage(id) {
        if (confirm('Bạn có chắc muốn xóa ảnh này?')) {
            fetch('/Admin/Product/DeleteImage?imageId=' + id, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('img-container-' + id).remove();
                } else {
                    alert('Lỗi khi xóa ảnh');
                }
            });
        }
    }
</script>