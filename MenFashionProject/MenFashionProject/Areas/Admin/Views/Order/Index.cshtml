@model IEnumerable<MenFashionProject.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="fw-bold mb-3">Danh sách Đơn hàng</h4>
<div class="card shadow-sm">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Mã Đơn</th>
                <th>Khách Hàng</th>
                <th>Ngày Đặt</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="fw-bold">@item.Code</span></td>
                    <td>@item.CustomerName<br><small class="text-muted">@item.Phone</small></td>
                    <td>@item.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-danger fw-bold">@item.TotalAmount?.ToString("#,##0") đ</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                        }
                        else if (item.Status == 2)
                        {

                            <span class="badge bg-primary">Đóng gói</span>
                        }
                        else if (item.Status == 3)
                        {

                            <span class="badge bg-info text-dark">Đang giao</span>
                        }
                        else
                        {

                            <span class="badge bg-success">Hoàn thành</span>
                        }
                    </td>
                    <td>
                        <a href="/Admin/Order/ViewOrder/@item.OrderId" class="btn btn-sm btn-outline-dark">
                            <i class="fa-solid fa-eye"></i> Xem
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>