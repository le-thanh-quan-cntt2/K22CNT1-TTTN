@model MenFashionProject.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var details = ViewBag.OrderDetails as List<MenFashionProject.Models.OrderDetail>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold">Chi tiết đơn hàng: <span class="text-danger">#@Model.Code</span></h4>

        <div>
            <a href="/Admin/Order" class="btn btn-secondary me-2">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>

            <form action="/Admin/Order/Delete" method="post" style="display:inline-block"
                  onsubmit="return confirm('CẢNH BÁO: Bạn có chắc chắn muốn xóa đơn hàng này không? Hành động này không thể hoàn tác!');">

                @Html.AntiForgeryToken() <input type="hidden" name="id" value="@Model.OrderId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash"></i> Xóa đơn hàng
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white fw-bold">
                    <i class="fa-solid fa-user me-2"></i> Thông tin người nhận
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Họ tên:</strong> @Model.CustomerName</p>
                    <p class="mb-2"><strong>SĐT:</strong> @Model.Phone</p>
                    <p class="mb-2"><strong>Địa chỉ:</strong> @Model.Address</p>
                    <p class="mb-2"><strong>Ngày đặt:</strong> @Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="mb-0"><strong>Thanh toán:</strong> COD (Thu hộ)</p>
                </div>
            </div>

            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="fa-solid fa-pen-to-square me-2"></i> Xử lý đơn hàng
                </div>
                <div class="card-body">
                    <form action="/Admin/Order/UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@Model.OrderId" />

                        <label class="form-label fw-bold">Trạng thái hiện tại:</label>
                        <select name="status" class="form-select mb-3">
                            <option value="1" selected="@(Model.Status == 1)">Chờ xác nhận</option>
                            <option value="2" selected="@(Model.Status == 2)">Đóng gói</option>
                            <option value="3" selected="@(Model.Status == 3)">Đang giao hàng</option>
                            <option value="4" selected="@(Model.Status == 4)">Hoàn thành</option>
                            <option value="5" selected="@(Model.Status == 5)">Hủy đơn</option>
                        </select>

                        <button type="submit" class="btn btn-primary w-100 fw-bold">Cập nhật trạng thái</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header fw-bold bg-light">
                    <i class="fa-solid fa-cart-shopping me-2"></i> Sản phẩm đã mua
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">Size</th>
                                <th class="text-center">Màu</th>
                                <th>Giá</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (details != null)
                            {
                                foreach (var item in details)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="~/images/@item.Product?.Image" style="width: 40px; height: 40px; object-fit: cover;" class="rounded me-2 border">
                                                <span class="fw-bold text-dark">@item.Product?.ProductName</span>
                                            </div>
                                        </td>
                                        <td class="text-center"><span class="badge bg-secondary">@item.Size</span></td>
                                        <td class="text-center">@item.Color</td>

                                        <td>@item.Price.ToString("#,##0") đ</td>
                                        <td class="text-center fw-bold">@item.Quantity</td>
                                        <td class="text-end fw-bold text-danger">@((item.Price * item.Quantity).ToString("#,##0")) đ</td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="bg-light">
                                <td colspan="5" class="text-end fw-bold text-uppercase">Tổng Cộng:</td>
                                <td class="fw-bold text-danger fs-5 text-end">@Model.TotalAmount?.ToString("#,##0") đ</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>