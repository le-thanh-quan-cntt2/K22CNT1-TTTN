@model MenFashionProject.Models.User
@{
    ViewData["Title"] = "Hồ sơ khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold">Hồ sơ: <span class="text-primary">@Model.FullName</span></h4>
    <a href="/Admin/Customer" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center pt-5">
                <div class="mb-3">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                        <i class="fa-solid fa-user fs-1 text-secondary"></i>
                    </div>
                </div>
                <h5 class="fw-bold">@Model.FullName</h5>
                <p class="text-muted">@Model.UserName</p>
                <hr>
                <div class="text-start">
                    <p><i class="fa-solid fa-envelope me-2 w-25"></i> @(Model.Email ?? "Chưa cập nhật")</p>
                    <p><i class="fa-solid fa-phone me-2 w-25"></i> @(Model.Phone ?? "Chưa cập nhật")</p>
                    <p><i class="fa-solid fa-location-dot me-2 w-25"></i> @(Model.Address ?? "Chưa cập nhật")</p>
                    <p><i class="fa-solid fa-calendar me-2 w-25"></i> @Model.CreatedDate?.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white fw-bold py-3">
                <i class="fa-solid fa-bag-shopping me-2"></i> Lịch sử đơn hàng (@Model.Orders.Count đơn)
            </div>
            <div class="card-body p-0">
                @if (Model.Orders != null && Model.Orders.Any())
                {
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders.OrderByDescending(x => x.CreatedDate))
                            {
                                <tr>
                                    <td class="fw-bold">@order.Code</td>
                                    <td>@order.CreatedDate?.ToString("dd/MM/yyyy")</td>
                                    <td class="text-danger fw-bold">@order.TotalAmount?.ToString("#,##0") đ</td>
                                    <td>
                                        @if (order.Status == 1)
                                        {
                                            <span class="badge bg-warning text-dark">Mới</span>
                                        }
                                        else if (order.Status == 4)
                                        {

                                            <span class="badge bg-success">Hoàn thành</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-secondary">Khác</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a href="/Admin/Order/ViewOrder/@order.OrderId" class="btn btn-sm btn-outline-primary">
                                            Xem
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <p>Khách hàng này chưa mua đơn hàng nào.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>