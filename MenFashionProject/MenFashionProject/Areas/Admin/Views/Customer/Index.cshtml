@model IEnumerable<MenFashionProject.Models.User>
@{
    ViewData["Title"] = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="fw-bold mb-3 text-uppercase">Danh sách Khách hàng</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="ps-4">Họ tên</th>
                    <th>Liên lạc</th>
                    <th>Địa chỉ</th>
                    <th>Ngày tham gia</th>
                    <th class="text-end pe-4">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <span class="fw-bold text-primary">@item.FullName</span><br>
                            <small class="text-muted">@item.UserName</small>
                        </td>
                        <td>
                            <i class="fa-solid fa-phone me-1 text-muted"></i> @(item.Phone ?? "---") <br>
                            <i class="fa-solid fa-envelope me-1 text-muted"></i> @(item.Email ?? "---")
                        </td>
                        <td>@item.Address</td>
                        <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                        <td class="text-end pe-4">
                            <a href="/Admin/Customer/Details/@item.UserId" class="btn btn-sm btn-outline-info me-2" title="Xem lịch sử mua">
                                <i class="fa-solid fa-clock-rotate-left"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.UserId" method="post" style="display:inline;"
                                  onsubmit="return confirm('Cảnh báo: Xóa khách hàng sẽ xóa toàn bộ đơn hàng của họ. Bạn có chắc không?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa tài khoản">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>