<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Admin MenFashion</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap"
          rel="stylesheet">

    <!-- Admin CSS -->
    <link rel="stylesheet" href="~/css/admin/admin.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ===== SIDEBAR ===== -->
    <aside class="sidebar">
        <h3 class="text-center fw-bold mb-4 pt-3 text-white">
            ADMIN CP
        </h3>

        <nav class="sidebar-menu">
            <a href="/Admin/Home" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="fa-solid fa-gauge"></i> Dashboard
            </a>

            <a href="/Admin/Product" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
                <i class="fa-solid fa-shirt"></i> Sản phẩm
            </a>

            <a href="/Admin/Order" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">
                <i class="fa-solid fa-file-invoice-dollar"></i> Đơn hàng
            </a>

            <a href="/Admin/News" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "News" ? "active" : "")">
                <i class="fa-solid fa-newspaper"></i> Tin tức
            </a>

            <a href="/Admin/Customer" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" ? "active" : "")">
                <i class="fa-solid fa-users"></i> Khách hàng
            </a>

            <a href="/Admin/Contact" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")">
                <i class="fa-solid fa-envelope"></i> Liên hệ & góp ý
            </a>
        </nav>

        <hr class="border-secondary mx-3">

        <a href="/" target="_blank" class="sidebar-back">
            <i class="fa-solid fa-arrow-left"></i> Về trang bán hàng
        </a>
    </aside>

    <!-- ===== MAIN CONTENT ===== -->
    <div class="main-content">

        <!-- TOP BAR -->
        <header class="admin-navbar d-flex justify-content-between align-items-center mb-4">
            <span class="fw-bold">
                Xin chào, <span class="text-danger">Quản trị viên</span>
            </span>

            <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">
                <i class="fa-solid fa-right-from-bracket me-1"></i> Đăng xuất
            </a>
        </header>

        <!-- PAGE CONTENT -->
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
