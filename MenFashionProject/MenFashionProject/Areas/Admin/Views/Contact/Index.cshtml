@model IEnumerable<MenFashionProject.Models.Contact>

@{
    ViewData["Title"] = "Quản lý Liên Hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold text-uppercase">Danh sách Liên hệ / Góp ý</h4>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Họ tên</th>
                        <th>Thông tin liên lạc</th>
                        <th style="width: 40%;">Nội dung</th>
                        <th>Ngày gửi</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">@item.Name</td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <small><i class="fa-solid fa-envelope me-2 text-muted"></i>@item.Email</small>
                                        @if (!string.IsNullOrEmpty(item.Phone))
                                        {
                                            <small class="mt-1"><i class="fa-solid fa-phone me-2 text-muted"></i>@item.Phone</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <p class="mb-0 text-muted small text-break">@item.Message</p>
                                </td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end pe-4">
                                    <form asp-action="Delete" asp-route-id="@item.ContactId" method="post"
                                          onsubmit="return confirm('Bạn có chắc muốn xóa tin nhắn này?');" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">
                                <i class="fa-regular fa-folder-open fs-2 mb-2"></i>
                                <p>Chưa có tin nhắn liên hệ nào.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>